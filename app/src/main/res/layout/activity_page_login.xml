<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="374dp"
        android:layout_height="82dp"
        android:layout_below="@+id/repassword"
        android:layout_marginBottom="200dp"
        android:text="S'inscrire"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="376dp"
        android:layout_height="68dp"
        android:layout_below="@+id/btnsignup"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="128dp"
        android:text="Vous avez déjà un compte? Connectez-vous!"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.342"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnsignup"
        app:layout_constraintVertical_bias="0.543" />

    <EditText
        android:id="@+id/username"
        android:layout_width="402dp"
        android:layout_height="53dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="84dp"
        android:hint="  Nom d'utilisateur"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="@+id/repassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <EditText
        android:id="@+id/password"
        android:layout_width="418dp"
        android:layout_height="54dp"
        android:layout_below="@+id/username"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"

        android:hint="  Retaper le mot de passe"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repassword" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="308dp"
        android:hint="  Mot de passe"
        app:backgroundTint="@color/design_default_color_error"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="164dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btnsignup"
        app:layout_constraintEnd_toEndOf="@+id/repassword"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/repassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/fitmasterlogo" />


</androidx.constraintlayout.widget.ConstraintLayout>